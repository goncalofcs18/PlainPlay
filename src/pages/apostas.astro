---
import { changeLanguage } from "i18next";
import { Icon } from "astro-icon";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Button from "@components/ui/button.astro";
import Contactform from "@components/contactform.astro";

changeLanguage("en");


---

<Layout title="Contact">
	<Container>
		<Sectionhead>
			<Fragment slot="title">Apostas Desportivas</Fragment>
			<Fragment slot="desc">Get in Touch.</Fragment>
		</Sectionhead>
        <div x-data="{ activeTab: 'tab1'}" class="p-6 ">
            <!-- Tabs navigation -->
            <nav class="flex flex-row ">
              <button
      :class="{ 'text-blue-500 border-blue-500': activeTab === 'tab1' }"
      class="px-4 py-2 border-b-2 focus:outline-none"
      @click.prevent="activeTab = 'tab1'">
      <!-- Ícone Ao Vivo -->
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline-block mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
      </svg>
      Ao Vivo
    </button>
    
    <!-- Tab Futebol -->
    <button
      :class="{ 'text-green-500 border-green-500': activeTab === 'tab2' }"
      class="px-4 py-2 border-b-2 focus:outline-none"
      @click.prevent="activeTab = 'tab2'">
      <!-- Ícone de Bola de Futebol SVG -->
      <img src="https://cdn-icons-png.freepik.com/512/211/211950.png" class="h-5 w-5 inline-block mr-1" alt="Futebol" />
      Futebol
    </button>
    
    <!-- Tab Ténis -->
    <button
      :class="{ 'text-yellow-500 border-yellow-400': activeTab === 'tab3' }"
      class="px-4 py-2 border-b-2 focus:outline-none"
      @click.prevent="activeTab = 'tab3'">
      <!-- Ícone Ténis -->
      <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/3/36/Tennis_ball_3.svg/1024px-Tennis_ball_3.svg.png" class="h-5 w-5 inline-block mr-1" alt="Futebol" />
      Ténis
    </button>
  
    <button
          :class="{ 'text-orange-500 border-orange-500': activeTab === 'tab4' }"
          class="px-4 py-2 border-b-2 focus:outline-none"
          @click.prevent="activeTab = 'tab4'">
          <img src="https://static.vecteezy.com/system/resources/previews/013/515/360/original/basketball-ball-icon-png.png" class="h-5 w-5 inline-block mr-1" alt="Futebol" />
          Basquetebol
        </button> 

        <!-- Tab Voleibol -->
        <button
          :class="{ 'text-blue-400 border-blue-400': activeTab === 'tab5' }"
          class="px-4 py-2 border-b-2 focus:outline-none"
          @click.prevent="activeTab = 'tab5'">
          <img src="https://cdn-icons-png.flaticon.com/512/184/184042.png" class="h-5 w-5 inline-block mr-1" alt="Futebol" />
          Voleibol
        </button>

        <!-- Tab E-Sports -->
        <button
          :class="{ 'text-purple-500 border-purple-500': activeTab === 'tab6' }"
          class="px-4 py-2 border-b-2 focus:outline-none"
          @click.prevent="activeTab = 'tab6'">
          <img src="https://cdn-icons-png.flaticon.com/512/7915/7915399.png" class="h-5 w-5 inline-block mr-1" alt="Futebol" />
          E-Sports
        </button>

        <!-- Tab Golfe -->
        <button
          :class="{ 'text-red-500 border-red-500': activeTab === 'tab7' }"
          class="px-4 py-2 border-b-2 focus:outline-none"
          @click.prevent="activeTab = 'tab7'">
          <img src="https://cdn-icons-png.flaticon.com/512/753/753858.png" class="h-5 w-5 inline-block mr-1" alt="Futebol" />
          Golfe
        </button>

         <!-- Tab hockei -->
        <button
      :class="{ 'text-gray-500 border-gray-400': activeTab === 'tab8' }"
      class="px-4 py-2 border-b-2 focus:outline-none"
      @click.prevent="activeTab = 'tab8'">
      <!-- Ícone Ténis -->
      <img src="https://cdn-icons-png.freepik.com/256/13165/13165006.png" class="h-5 w-5 inline-block mr-1 dark:invert" alt="Futebol" />
      Hóquei no Gelo
    </button>
        
      </nav>
  </nav>
            </nav>
          
            <!-- Tabs content -->
            <div class="border p-4">
              <div x-show="activeTab === 'tab1'">
                <div x-data="{ activeTab: 'tab1', showBetSlip: false }" class="p-6">
                  <!-- Tabs navigation -->
                  <nav class="flex flex-row">
                    <!-- Botões de navegação das tabs existentes... -->
                  </nav>
                
                  <!-- Tabs content -->
                  <div class="border p-4">
                    <!-- Conteúdo para a tab "Ao Vivo" -->
                    <div x-show="activeTab === 'tab1'">
                      <!-- Seção de jogos ao vivo -->
                      <div class="mb-4">
                        <!-- Seção de futebol -->
                        <div class="mb-4">
                          <h2 class="text-lg font-semibold">Futebol:</h2>
                          <!-- Jogo específico -->
                          <div class="flex justify-between items-center mb-2">
                            <span>Inglaterra: Premier League - 30min 2ª Parte</span>
                            <span>Manchester 4 - 1 Aston</span>
                          </div>
                          <div class="flex justify-around mb-4">
                            <button class="px-3 py-1 bg-green-500 text-white rounded">Vitória Manchester</button>
                            <button class="px-3 py-1 bg-blue-500 text-white rounded">Empate</button>
                            <button class="px-3 py-1 bg-red-500 text-white rounded">Vitória Aston</button>
                          </div>
                          <!-- Repetir para outros jogos e esportes... -->
                        </div>
                        <!-- Seção de tênis, etc... -->
                      </div>
                      
                      <!-- Boletim de aposta -->
                      <div class="bg-gray-200 p-4 rounded">
                        <h2 class="text-lg font-semibold mb-2">Boletim</h2>
                        <!-- Detalhes da aposta -->
                        <div class="mb-4">
                          <span>Aposta simples</span><br>
                          <span>Manchester - Aston</span><br>
                          <span>Vencedor: Manchester</span><br>
                          <span>Odds: 3,2</span><br>
                          <span>Montante: 10€</span><br>
                          <span>Ganhos possíveis: 32€</span>
                        </div>
                        <!-- Total e botão de apostar -->
                        <div class="flex justify-between items-center">
                          <span>Total: 10€</span>
                          <button class="px-4 py-2 bg-blue-500 text-white rounded" @click="showBetSlip = true">Apostar 10€</button>
                        </div>
                      </div>
                    </div>
                
                    <!-- Conteúdo para as outras tabs... -->
                  </div>
                
                  <!-- Pop-up para confirmação da aposta -->
                  <div x-show="showBetSlip" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4" x-transition>
                    <div class="bg-white p-6 rounded shadow-lg max-w-lg w-full">
                      <h3 class="text-2xl font-bold mb-4">Confirmar Aposta</h3>
                      <p>Confirmar aposta no jogo Manchester vs Aston com vencedor Manchester. Odds 3,2, aposta total 10€.</p>
                      <div class="mt-6">
                        <button class="px-6 py-2 bg-green-500 text-white rounded" @click="showBetSlip = false">Confirmar</button>
                        <button class="px-6 py-2 bg-red-500 text-white rounded" @click="showBetSlip = false">Cancelar</button>
                      </div>
                    </div>
                  </div>
                </div>
                
                <script src="//unpkg.com/alpinejs" defer></script>
              </div>
              <div x-show="activeTab === 'tab2'" style="display: none;">
                <p>This is the content for Tab 2.</p>
              </div>
              <div x-show="activeTab === 'tab3'" style="display: none;">
                <p>This is the content for Tab 3.</p>
              </div>
              <div x-show="activeTab === 'tab4'" style="display: none;">
                <p>This is the content for Tab 4.</p>
              </div>
              <div x-show="activeTab === 'tab5'" style="display: none;">
                <p>This is the content for Tab 5.</p>
              </div>
              <div x-show="activeTab === 'tab6'" style="display: none;">
                <p>This is the content for Tab 6.</p>
              </div>
              <div x-show="activeTab === 'tab7'" style="display: none;">
                <p>This is the content for Tab 7.</p>
              </div>
              <div x-show="activeTab === 'tab8'" style="display: none;">
                <p>This is the content for Tab 8.</p>
              </div>
            </div>
          </div>
	</Container>
    <!-- Alpine.js component for tabs -->

  
      
</Layout>
